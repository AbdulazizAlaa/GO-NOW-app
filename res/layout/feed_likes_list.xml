<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comments_dialog_drawable"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/feed_comment_list_drag_downIV"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/down_icon_comments" />

    <LinearLayout
        android:id="@+id/feed_comment_list_likeV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp" >

        <ImageView
            android:id="@+id/feed_comment_list_likePageIV"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back_icon_likes" />

        <TextView
            android:id="@+id/feed_comment_list_numlikesTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="People who like this"
            android:textSize="20sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/feed_like_list_likesLV"
        android:layout_width="match_parent"
        android:layout_height="250dp" >
    </ListView>

</LinearLayout>