<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|right"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:gravity="left|center_vertical" >

            <ImageView
                android:id="@+id/like_list_item_pageImgIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight=".7"
                android:src="@drawable/profilepicture_image_likes" />

            <TextView
                android:id="@+id/like_list_item_ProfilenameTv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight=".3"
                android:fontFamily="Roboto"
                android:gravity="center_vertical"
                android:text="Lara Ali"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#0871ba"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/like_list_item_addB"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:visibility="invisible"
            android:layout_weight=".2"
            android:background="@drawable/like_list_item_button_selector"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:text="Add Friend"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>